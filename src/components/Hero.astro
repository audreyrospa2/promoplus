---
// src/components/Hero.astro
---
<section id="home" class="relative min-h-screen flex items-center overflow-hidden pt-20">
  <!-- Animated Background -->
  <div class="absolute inset-0 gradient-bg opacity-90">
    <div class="absolute top-20 left-10 w-96 h-96 blob gradient-bg opacity-30"></div>
    <div class="absolute bottom-20 right-10 w-[500px] h-[500px] blob gradient-bg opacity-40" style="animation-delay: -4s;"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] blob gradient-bg opacity-20" style="animation-delay: -2s;"></div>
  </div>
  
  <!-- Content -->
  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-h1 font-black text-white mb-6 leading-tight">
        Build the Road Out<br />
        <span class="text-yellow-300">for Growing SMEs</span>
      </h1>
      
      <p class="text-lead text-white/95 mb-4 font-light leading-relaxed max-w-3xl mx-auto">
        Empowering Growth, Simplifying Success.
      </p>
      
      <p class="text-lg text-white/90 mb-12 font-light leading-relaxed max-w-2xl mx-auto">
        The ultimate platform under Rollout<br />
        to showcase your innovations,<br />
        connect with partners and scale businesses.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="#products"
           class="px-8 py-4 bg-white text-purple-700 rounded-full font-bold text-lg hover:shadow-2xl transition-all transform hover:scale-105">
          Explore Products
        </a>
        <a href="#about"
           class="px-8 py-4 bg-transparent border-2 border-white text-white rounded-full font-bold text-lg hover:bg-white hover:text-purple-700 transition-all transform hover:scale-105">
          Learn More
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-10">
    <div class="animate-bounce">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0%, 100% {
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
      transform: rotate(0deg) scale(1);
    }
    25% {
      border-radius: 58% 42% 75% 25% / 76% 46% 54% 24%;
      transform: rotate(90deg) scale(1.1);
    }
    50% {
      border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%;
      transform: rotate(180deg) scale(0.9);
    }
    75% {
      border-radius: 33% 67% 58% 42% / 63% 68% 32% 37%;
      transform: rotate(270deg) scale(1.05);
    }
  }
</style>