---

<section id="contact" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Left Side - Info -->
      <div class="flex flex-col justify-center">
        <h2 class="text-h2 font-black mb-6">
          Rollout<br><span class="gradient-text text-h3">Build the Road Out</span>
        </h2>
        <p class="text-h5 font-semibold text-gray-700 mb-8">
          Your Growth Journey Starts Today!
        </p>
        
        <div class="space-y-6 mb-8">
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <h4 class="text-base font-semibold text-gray-900">Phone</h4>
              <p class="text-sm md:text-base text-gray-600">+852 6662 5341</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 rounded-full bg-orange-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h4 class="text-base font-semibold text-gray-900">Email</h4>
              <p class="text-sm md:text-base text-gray-600">rolloutinnovation@gmail.com</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="text-base font-semibold text-gray-900">Address</h4>
              <p class="text-sm md:text-base text-gray-600">Unit 503, 5/F, Peninsula Tower, 538 Castle Peak Rd, Lai Chi Kok, Kowloon, HK</p>
            </div>
          </div>
        </div>

        <a href="https://wa.me/85266625341" 
           target="_blank"
           rel="noopener noreferrer"
           class="inline-flex items-center justify-center px-8 py-4 gradient-bg text-white rounded-full font-bold text-base md:text-lg hover:shadow-2xl transition-all transform hover:scale-105">
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          Contact Us to Collaborate
        </a>
      </div>

      <!-- Right Side - Form -->
      <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8">
        <h3 class="text-h3 font-black mb-6">Join PromoPlus</h3>
        
        <form 
          name="promoplus-contact" 
          data-netlify="true"
          data-netlify-honeypot="bot-field"
          class="space-y-4"
        >
          <p class="hidden">
            <label>Don't fill this out if you're human: <input name="bot-field" /></label>
          </p>
          
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Name *</label>
            <input 
              type="text" 
              name="name" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-base"
            />
          </div>

          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Phone *</label>
              <input 
                type="tel" 
                name="phone" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-base"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Email *</label>
              <input 
                type="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-base"
              />
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Position</label>
              <input 
                type="text" 
                name="position"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-base"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Company</label>
              <input 
                type="text" 
                name="company"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-base"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Message</label>
            <textarea 
              name="message" 
              rows="4"
              placeholder="Please provide simple product description or link to more information, we will reach out to you soon."
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 text-base"
            ></textarea>
          </div>

          <button 
            type="submit"
            class="w-full py-4 border-2 border-purple-600 text-purple-700 rounded-full font-bold text-base md:text-lg hover:bg-purple-700 hover:text-white transition-all"
          >
            Submit Application
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  // Handle form submission with success popup
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form[name="promoplus-contact"]');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(form);
        
        fetch('/', {
          method: 'POST',
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: new URLSearchParams(formData).toString()
        })
        .then(() => {
          // Show success popup
          showSuccessPopup();
          // Reset form
          form.reset();
        })
        .catch((error) => {
          alert('Error submitting form. Please try again or contact us directly.');
          console.error('Form submission error:', error);
        });
      });
    }
  });

  function showSuccessPopup() {
    const successHTML = `
      <div id="success-popup" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full text-center transform animate-scale-in">
          <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-green-100 flex items-center justify-center">
            <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-black mb-4 text-gray-900">Thank You!</h3>
          <p class="text-gray-600 mb-6">Your application has been successfully submitted. We'll get back to you soon!</p>
          <button onclick="closeSuccessPopup()" class="px-8 py-3 bg-purple-600 text-white rounded-full font-bold hover:bg-purple-700 transition-all">
            Close
          </button>
        </div>
      </div>
      <style>
        @keyframes scale-in {
          from {
            transform: scale(0.9);
            opacity: 0;
          }
          to {
            transform: scale(1);
            opacity: 1;
          }
        }
        .animate-scale-in {
          animation: scale-in 0.3s ease-out;
        }
      </style>
    `;
    
    document.body.insertAdjacentHTML('beforeend', successHTML);
  }

  window.closeSuccessPopup = function() {
    const popup = document.getElementById('success-popup');
    if (popup) {
      popup.remove();
    }
  };
</script>