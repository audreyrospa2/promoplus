---
// src/layouts/Layout.astro
interface Props {
title: string;
description?: string;
}
const { title, description = "Empowering Growth, Simplifying Success" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content={description}>
<title>{title}</title>
<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;500;700;900&display=swap" rel="stylesheet">
<style is:global>
@font-face {
font-family: 'Century Gothic';
src: local('Century Gothic'), local('CenturyGothic');
font-weight: normal;
font-style: normal;
 }
* {
margin: 0;
padding: 0;
box-sizing: border-box;
 }
html {
scroll-behavior: smooth;
font-family: 'Noto Sans TC', 'Century Gothic', sans-serif;
/* Base font size: Mobile first approach */
font-size: 14px;
 }

/* Tablet (768px and up) */
@media (min-width: 768px) {
html {
font-size: 15px;
 }
 }

/* Desktop (1024px and up) */
@media (min-width: 1024px) {
html {
font-size: 16px;
 }
 }

/* Large Desktop (1280px and up) */
@media (min-width: 1280px) {
html {
font-size: 16px;
 }
 }

body {
overflow-x: hidden;
font-size: 1rem;
line-height: 1.6;
 }

/* Responsive Typography Classes */
h1, .text-h1 {
font-size: 2rem; /* 32px on mobile */
line-height: 1.2;
font-weight: 700;
 }

h2, .text-h2 {
font-size: 1.75rem; /* 28px on mobile */
line-height: 1.3;
font-weight: 700;
 }

h3, .text-h3 {
font-size: 1.5rem; /* 24px on mobile */
line-height: 1.4;
font-weight: 600;
 }

h4, .text-h4 {
font-size: 1.25rem; /* 20px on mobile */
line-height: 1.4;
font-weight: 600;
 }

h5, .text-h5 {
font-size: 1.125rem; /* 18px on mobile */
line-height: 1.5;
font-weight: 500;
 }

h6, .text-h6 {
font-size: 1rem; /* 16px on mobile */
line-height: 1.5;
font-weight: 500;
 }

/* Tablet sizes */
@media (min-width: 768px) {
h1, .text-h1 {
font-size: 2.5rem; /* 37.5px on tablet */
 }
h2, .text-h2 {
font-size: 2.125rem; /* 31.875px on tablet */
 }
h3, .text-h3 {
font-size: 1.75rem; /* 26.25px on tablet */
 }
h4, .text-h4 {
font-size: 1.5rem; /* 22.5px on tablet */
 }
h5, .text-h5 {
font-size: 1.25rem; /* 18.75px on tablet */
 }
 }

/* Desktop sizes */
@media (min-width: 1024px) {
h1, .text-h1 {
font-size: 3.5rem; /* 56px on desktop */
 }
h2, .text-h2 {
font-size: 2.75rem; /* 44px on desktop */
 }
h3, .text-h3 {
font-size: 2rem; /* 32px on desktop */
 }
h4, .text-h4 {
font-size: 1.75rem; /* 28px on desktop */
 }
h5, .text-h5 {
font-size: 1.5rem; /* 24px on desktop */
 }
 }

/* Body text sizes */
.text-base {
font-size: 1rem;
 }

.text-sm {
font-size: 0.875rem;
 }

.text-xs {
font-size: 0.75rem;
 }

.text-lg {
font-size: 1.125rem;
 }

@media (min-width: 768px) {
.text-lg {
font-size: 1.25rem;
 }
 }

@media (min-width: 1024px) {
.text-lg {
font-size: 1.375rem;
 }
 }

/* Lead/Hero text */
.text-lead {
font-size: 1.125rem;
line-height: 1.75;
 }

@media (min-width: 768px) {
.text-lead {
font-size: 1.375rem;
 }
 }

@media (min-width: 1024px) {
.text-lead {
font-size: 1.5rem;
 }
 }

.gradient-bg {
background: linear-gradient(135deg, #1e40af 0%, #7c3aed 25%, #dc2626 50%, #f59e0b 75%, #fbbf24 100%);
 }
.gradient-text {
background: linear-gradient(135deg, #7c3aed, #dc2626, #f59e0b);
-webkit-background-clip: text;
-webkit-text-fill-color: transparent;
background-clip: text;
 }
.blob {
border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
animation: blob 8s ease-in-out infinite;
 }
@keyframes blob {
 0%, 100% { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
 25% { border-radius: 58% 42% 75% 25% / 76% 46% 54% 24%; }
 50% { border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%; }
 75% { border-radius: 33% 67% 58% 42% / 63% 68% 32% 37%; }
 }
</style>
</head>
<body class="bg-white text-gray-900">
<slot />
</body>
</html>