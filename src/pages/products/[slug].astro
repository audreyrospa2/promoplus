---
// src/pages/products/[slug].astro
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map((product: CollectionEntry<'products'>) => ({
    params: { slug: product.slug },
    props: { product }
  }));
}

interface Props {
  product: CollectionEntry<'products'>;
}

const { product } = Astro.props;
const { Content } = await product.render();
---

<Layout title={`${product.data.title} - Rollout PromoPlus`} description={product.data.description}>
  <Header />
  
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="py-20 gradient-bg">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <span class="inline-block px-4 py-2 bg-white/20 backdrop-blur-sm text-white rounded-full text-sm font-semibold mb-4">
            {product.data.category}
          </span>
          <h1 class="text-5xl md:text-6xl font-black text-white mb-6">
            {product.data.title}
          </h1>
          <p class="text-xl text-white/90 mb-8">
            {product.data.description}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={product.data.link} 
               target="_blank"
               rel="noopener noreferrer"
               class="px-8 py-4 bg-white text-purple-700 rounded-full font-bold text-lg hover:shadow-2xl transition-all transform hover:scale-105">
              Visit Product Site
            </a>
            <a href="#contact" 
               class="px-8 py-4 bg-transparent border-2 border-white text-white rounded-full font-bold text-lg hover:bg-white hover:text-purple-700 transition-all">
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Product Image -->
    <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <img 
            src={product.data.image} 
            alt={product.data.title}
            class="w-full rounded-2xl shadow-2xl"
          />
        </div>
      </div>
    </section>

    <!-- Product Details -->
    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto prose prose-lg">
          <Content />
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 gradient-bg">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl font-black text-white mb-6">
            Ready to Learn More?
          </h2>
          <p class="text-xl text-white/90 mb-8">
            Get in touch with us to discover how {product.data.title} can transform your business.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={product.data.link} 
               target="_blank"
               rel="noopener noreferrer"
               class="px-8 py-4 bg-white text-purple-700 rounded-full font-bold text-lg hover:shadow-2xl transition-all transform hover:scale-105">
              Visit Product Site
            </a>
            <a href="https://wa.me/85266625341" 
               target="_blank"
               rel="noopener noreferrer"
               class="px-8 py-4 bg-transparent border-2 border-white text-white rounded-full font-bold text-lg hover:bg-white hover:text-purple-700 transition-all">
              Contact on WhatsApp
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Back to Products -->
    <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-6 text-center">
        <a href="/#products" class="inline-flex items-center text-purple-600 hover:text-purple-700 font-semibold">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to All Products
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .prose {
    color: #374151;
  }
  
  .prose h2 {
    color: #111827;
    font-weight: 800;
    margin-top: 2em;
    margin-bottom: 1em;
  }
  
  .prose h3 {
    color: #1f2937;
    font-weight: 700;
  }
  
  .prose p {
    margin-bottom: 1.25em;
    line-height: 1.75;
  }
  
  .prose ul {
    list-style-type: disc;
    padding-left: 1.5em;
  }
  
  .prose li {
    margin-bottom: 0.5em;
  }
  
  .prose a {
    color: #7c3aed;
    text-decoration: underline;
  }
  
  .prose strong {
    font-weight: 700;
    color: #111827;
  }
</style>